/* Styles for the course list pages. */
course {
    display:block;
    margin: 0px 20px;
    padding:15px;
    /*border-radius: 15px;*/
    border-bottom: 1px #bbb solid;
    cursor:pointer;
}
/* Note for anyone maintaining this in the distant future:
   The original design goal for the course list is for the course and all its
   sections to get highlighted when hovering over it, and for the sections
   and NOT their parent course to get highlighted when hovering over them. In
   the design there was only one hover color. I cannot make that work with pure
   CSS, and doing it in Javascript is incredibly ugly (code), so I'm using two
   different highlight colors. If CSS4 is out when you're looking at this code,
   there should be some way to do it with negation selectors.
   */
/*course:hover {
    background-color:#e7e7e7;
}*/

course:not(.selected) course-info:hover ~ sections section:not(.selected) {
    background-color: #966;
}
course.selected course-info:hover ~ sections section {
    color: #efefef;
    background-color: #966;
}
course-name {
    font-size: 130%;
    font-weight: 400;
}
/*course-number, course department-code, course-credits {
    font-size:110%;
}*/
course department-code {
    margin-left:1em;
}
course-credits {
    margin-left:0.7em;
}
course-description {
    display:block;
    font-size:87%;
}
section {
    display:block;
    margin:0px 0px 0px 5px;
    padding:4px 4px 4px 8px;
    overflow:auto;
    /* border-radius: 8px; */
}
sections section:not(.selected):hover {
    background-color: #966;
}
sections section.selected:hover {
    color: #efefef;
    background-color: #966;
}
sections section.selected {
    color: #efefef;
    background-color: #955;
}

section.closed {
    color: #888;
}

section-seats {
    font-size: 80%;
}

periods {
    font-size:80%;
    display:inline-block;
    margin-left:0em;
    float:right;
    padding:0.15em 0;
}
periods.noperiods {
    font-weight: bold;
}
period {
    margin-left:1em;
}
period-day {
    font-weight:bold;
}

/* Styles for the schedule page */
#scheduleBar {
    margin-left: auto;
    margin-right: auto;
    font-size: 130%;
    font-weight: 500;
    margin: 5px;
    margin-right: 20px;
    /* note to maintainers: if the general user-select is standard by now,
       please remove the vendor ones and replace with "user-select:none;" */
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select:none;
}
#scheduleBar:after { 
   content: " ";
   display: block; 
   height: 0; 
   clear: both;
}
#crns {
    font-size: 90%;
    float: right;
}
#switch {
    float: left;
}
.scheduleswitch {
    padding:5px;
    cursor:pointer;
}
.scheduleswitch.disabled {
    color: #999;
    cursor: default;
}

#scheduleContainer {
    height: 600px;
    margin-right: 15px;
    margin-top: 10px;
}

div#scheduleContent {
    margin-bottom:10px;
}
div#scheduleTable {
    display:table;
    margin: 10px auto auto auto;
    padding-right: 30px;
    /* padding-right must be == to the width of .narrowcol to center the
       table correctly */
    font-size:16px;
}
div#scheduleTable ul {
    display:table-cell;
    vertical-align:middle;
    width:160px;
    min-width:160px;
    border-right: 1px #bbb solid;
    text-align:center;
    list-style-type:none;
}
div#scheduleTable ul.narrowcol {
    width:60px;
    min-width:60px;
}
div#scheduleTable ul.narrowcol li {
    text-align:right;
    padding-right:0.5em;
}
div#scheduleTable ul li {
    height:24px;
    border-bottom:1px #bbb solid;
}
div#scheduleTable ul li.hour {
    height:2.8em;
    padding-bottom:1px; /* account for the missing border space */
}

/* Deselection list styles */
div#deselectContent {
    display:block;
    margin: 0px auto 0 auto;
}
div#deselectContent department-code, div#deselectContent course-number,
div#deselectContent course-credits, div#deselectContent course-description {
    display:none;
}

/* Styles for courses on the schedule 
 "div#scheduleTable ul li" needed for CSS precedence rules */
div#scheduleTable ul li.course {
    border-bottom:none;
    padding: 0px 4px 0px 4px;
    overflow:hidden;
}
div#scheduleTable ul li.course.end30 {
    border-bottom:1px #bbb solid;
}
