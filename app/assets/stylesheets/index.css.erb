    color: #722;
    background-color: #edd;
    border-left: 2px #b44 solid;
}
.c3 {
    color: #661;
    background-color: #EED;
    border-left: 2px #994 solid;
}
.c4 {
    color: #227;
    background-color: #DDE;
    border-left: 2px #448 solid;
}
.c5 {
    color: #166;
    background-color: #DEE;
    border-left: 2px #499 solid;
}
.c6 {
    color: #616;
    background-color: #EDE;
    border-left: 2px #949 solid;
}
div#scheduleTable .closed {
    background-image: url("<%=asset_path('generic-closed.png')%>");
    background-repeat: repeat;
    color: #000;
}


