<schools>
  {{#each schools}}
    <school data-id="{{id}}">
      <school-name>{{name}}</school-name>
      <departments>
        {{#each departments}}
          <department data-id="{{id}}">
            <department-code>{{code}}</department-code>
            <department-name>{{name}}</department-name>
          </department>
        {{/each}}
      </departments>
    </school>
  {{/each}
</schools>