#!/bin/bash
WORKDIR=$(cd -P -- "$(dirname -- "$0")" && pwd -P)/../develop
cd $WORKDIR

REPOS="yacs
yacs-web
yacs-admin
yacs-users
yacs-nginx
yacs-malg"

for repo in $REPOS; do
  uri="git@github.com:YACS-RCOS/$repo.git"
  git clone --quiet $uri
done

cd yacs && git checkout micro

for repo in $REPOS; do
  cd $WORKDIR
  cd $repo && git pull
done
